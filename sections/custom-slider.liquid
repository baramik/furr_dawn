{%- style -%}
  .custom-slider-{{ section.id }} {
    background-color: {{ section.settings.background_color }};
  }

  /* Swiper custom styles (keep your existing design tweaks) */
  .custom-slider-{{ section.id }} .swiper-pagination-bullet {
    width: 40px;
    height: 4px;
    margin: 0 4px;
    border-radius: 2px;
    background: rgba(255, 255, 255, 0.5);
  }

  .custom-slider-{{ section.id }} .swiper-pagination-bullet-active {
    background: white;
  }

  .custom-slider-{{ section.id }} .swiper-button-next,
  .custom-slider-{{ section.id }} .swiper-button-prev {
    color: white;
    width: 40px;
    height: 40px;
    top: 50%;
    transform: translateY(-50%);
  }

  .custom-slider-{{ section.id }} .swiper-slide {
    position: relative;
    width: 100%;
    opacity: 0;
    transition: opacity 0.8s cubic-bezier(0.4,0,0.2,1);
    background: transparent;
    min-height: 0;
  }

  .custom-slider-{{ section.id }} .swiper-slide.swiper-slide-active {
    opacity: 1;
  }

  .custom-slider-{{ section.id }} .slide-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0,0,0,0.32);
    z-index: 1;
  }

  .custom-slider-{{ section.id }} .slide-content {
    position: absolute;
    inset: 0;
    z-index: 2;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    padding: 0 5vw 0 2rem;
  }

  @media (max-width: 767px) {
    .custom-slider-{{ section.id }} .slide-content {
      justify-content: center;
      padding: 0 1rem;
    }
    .custom-slider-{{ section.id }} .slide-inner {
      text-align: center;
      align-items: center;
    }
  }

  .custom-slider-{{ section.id }} .slide-inner {
    max-width: 700px;
    margin-left: auto;
    color: #fff;
    text-align: right;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 1.5rem;
  }

  .custom-slider-{{ section.id }} .slide-eyebrow {
    font-size: 1rem;
    letter-spacing: 0.1em;
    opacity: 0.8;
    margin-bottom: 0.5rem;
    font-weight: 500;
  }

  .custom-slider-{{ section.id }} .slide-heading {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: 1rem;
    text-shadow: 0 2px 8px rgba(0,0,0,0.18);
  }

  @media (min-width: 768px) {
    .custom-slider-{{ section.id }} .slide-heading {
      font-size: 3.5rem;
    }
  }

  .custom-slider-{{ section.id }} .slide-subheading {
    font-size: 1.25rem;
    font-weight: 400;
    margin-bottom: 1.5rem;
    text-shadow: 0 2px 8px rgba(0,0,0,0.12);
  }

  .custom-slider-{{ section.id }} .slide-btn {
    background: #e5e7eb;
    color: #222;
    padding: 1.25rem 3rem;
    border-radius: 0.75rem;
    font-weight: 700;
    font-size: 1.35rem;
    box-shadow: 0 2px 12px rgba(0,0,0,0.13);
    transition: background 0.2s, color 0.2s;
    text-decoration: none;
    display: inline-block;
  }

  .custom-slider-{{ section.id }} .slide-btn:hover {
    background: #fff;
    color: #111;
  }
{%- endstyle -%}

<div class='custom-slider-{{ section.id }} twcss-w-full'>
  <div class='swiper'>
    <div class='swiper-wrapper'>
      {%- for block in section.blocks -%}
        <div
          class='swiper-slide twcss-w-full twcss-h-[350px] md:twcss-h-[500px] lg:twcss-h-[600px]'
          {{ block.shopify_attributes }}
        >
          {%- if block.settings.slide_image -%}
            <img
              src='{{ block.settings.slide_image | image_url: width: 2000, crop: 'center' }}'
              alt='{{ block.settings.heading | escape }}'
              class='twcss-w-full twcss-h-full twcss-object-cover twcss-block'
              loading='lazy'
              width='2000'
              height='1000'
            >
            <div class='slide-overlay'></div>
            <div class='slide-content'>
              <div class='slide-inner'>
                {%- if block.settings.eyebrow != blank -%}
                  <div class='slide-eyebrow'>{{ block.settings.eyebrow }}</div>
                {%- endif -%}
                {%- if block.settings.heading != blank -%}
                  <div class='slide-heading'>{{ block.settings.heading }}</div>
                {%- endif -%}
                {%- if block.settings.subheading != blank -%}
                  <div class='slide-subheading'>{{ block.settings.subheading }}</div>
                {%- endif -%}
                {%- if block.settings.button_label != blank and block.settings.button_link != blank -%}
                  <a
                    href='{{ block.settings.button_link }}'
                    class='slide-btn'
                  >
                    {{ block.settings.button_label }}
                  </a>
                {%- endif -%}
              </div>
            </div>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
    <!-- Swiper navigation and pagination -->
    <div class='swiper-pagination'></div>
    <div class='swiper-button-prev'></div>
    <div class='swiper-button-next'></div>
  </div>
</div>

<script defer>
  document.addEventListener('DOMContentLoaded', function () {
    var swiper = new Swiper('.custom-slider-{{ section.id }} .swiper', {
      loop: true,
      autoplay: { delay: {{ section.settings.slide_interval | default: 5000 }} },
      speed: 800,
      navigation: {
        nextEl: '.custom-slider-{{ section.id }} .swiper-button-next',
        prevEl: '.custom-slider-{{ section.id }} .swiper-button-prev',
      },
      pagination: {
        el: '.custom-slider-{{ section.id }} .swiper-pagination',
        clickable: true,
      },
      slidesPerView: 1,
      effect: 'slide',
    });
  });
</script>

{% schema %}
{
  "name": "Custom Slider",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "number",
      "id": "slide_interval",
      "label": "Slide Switch Interval (ms)",
      "default": 5000
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "limit": 5,
      "settings": [
        {
          "type": "image_picker",
          "id": "slide_image",
          "label": "Slide Image"
        },
        {
          "type": "text",
          "id": "eyebrow",
          "label": "Eyebrow (small text above heading)",
          "default": "ICONIC THEN. ESSENTIAL NOW."
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Slide Heading"
        },
        {
          "type": "textarea",
          "id": "subheading",
          "label": "Subheading",
          "default": "Add your subheading text here"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button Label"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Slider",
      "blocks": [
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}
