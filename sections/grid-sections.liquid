{% schema %}
{
  "name": "Grid Sections",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "grid_item",
      "name": "Grid Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "background_image",
          "label": "Background Image"
        },
        {
          "type": "color",
          "id": "background_color",
          "label": "Background Color",
          "default": "#ffffff"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Grid Item Heading"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Share information about your brand or products.</p>"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button Label",
          "default": "Learn More"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        },
        {
          "type": "color",
          "id": "button_color",
          "label": "Button Color",
          "default": "#000000"
        },
        {
          "type": "color",
          "id": "button_text_color",
          "label": "Button Text Color",
          "default": "#ffffff"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Grid Sections",
      "blocks": [
        {
          "type": "grid_item"
        },
        {
          "type": "grid_item"
        }
      ]
    }
  ]
}
{% endschema %}

<div
  class='grid-sections section-padding'
  style='padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;'
>
  <div class='page-width'>
    <div class='twcss-grid twcss-grid-cols-1 md:twcss-grid-cols-2 twcss-gap-6'>
      {% for block in section.blocks %}
        {% if block.type == 'grid_item' %}
          <div
            class='grid-item twcss-relative twcss-min-h-[400px] twcss-rounded-lg twcss-overflow-hidden'
            style='background-color: {{ block.settings.background_color }};'
            {{ block.shopify_attributes }}
          >
            {% if block.settings.background_image %}
              <div class='twcss-absolute twcss-inset-0 twcss-z-0'>
                {{
                  block.settings.background_image
                  | image_url: width: 1000
                  | image_tag: loading: 'lazy', class: 'twcss-w-full twcss-h-full twcss-object-cover'
                }}
              </div>
            {% endif %}

            <div class='twcss-relative twcss-z-10 twcss-p-8 twcss-flex twcss-flex-col twcss-h-full twcss-items-center twcss-justify-center twcss-text-center'>
              {% if block.settings.heading != blank %}
                <h2 class='twcss-text-2xl md:twcss-text-3xl twcss-font-bold twcss-mb-4'>
                  {{ block.settings.heading }}
                </h2>
              {% endif %}

              {% if block.settings.text != blank %}
                <div class='twcss-prose twcss-mb-6 twcss-max-w-md'>
                  {{ block.settings.text }}
                </div>
              {% endif %}

              {% if block.settings.button_label != blank and block.settings.button_link != blank %}
                <div class='twcss-mt-6'>
                  <a
                    href='{{ block.settings.button_link }}'
                    class='twcss-inline-block twcss-px-6 twcss-py-3 twcss-rounded-md twcss-font-medium twcss-transition-colors'
                    style='background-color: {{ block.settings.button_color }}; color: {{ block.settings.button_text_color }};'
                  >
                    {{ block.settings.button_label }}
                  </a>
                </div>
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .grid-sections {
    width: 100%;
  }

  .grid-item {
    transition: transform 0.3s ease;
  }

  .grid-item:hover {
    transform: translateY(-4px);
  }
</style>
